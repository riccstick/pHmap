				_arg_axislineoffset="${_key##--axislineoffset=}"
				;;
			--grid_linewidth)
				test $# -lt 2 && die "Missing value for the optional argument '$_key'." 1
				_arg_grid_linewidth="$2"
				shift
				;;
			--grid_linewidth=*)
				_arg_grid_linewidth="${_key##--grid_linewidth=}"
				;;
			--grid_place)
				test $# -lt 2 && die "Missing value for the optional argument '$_key'." 1
				_arg_grid_place="$2"
